{
  "version": 2,
  "builds": [
    {
      "src": "backend/local.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/local.js"
    },
    {
      "src": "/health",
      "dest": "backend/local.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
